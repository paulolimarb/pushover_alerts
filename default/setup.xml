<setup>
    <block title="Pushover Alerts">
        <text>Configure Pushover Notifications</text>
    </block>

    <block title="API" endpoint="admin/alert_actions" entity="pushover">
        <text><![CDATA[ To retrieve an App Token, create a new Plugin/Application <a href="https://pushover.net/apps/build" target="_blank">here</a> first. <br />You can get the User Token from <a href="https://pushover.net/" target="_blank">pushover.net</a> after logging in. ]]></text>
        <input field="param.api.app_token">
            <label>App Token/Key</label>
            <type>text</type>
        </input>
        <input field="param.api.user_token">
            <label>User Token/Key</label>
            <type>text</type>
        </input>
    </block>

</setup>